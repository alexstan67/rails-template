<div class="container-contacts">
  <h1>Contactez-nous, on s'occupe du reste!</h1>

  <%= form_with model: @contact, data: { turbo: false } do |f| %>
    <% if @contact.errors.any? %>
      <div class="alert-danger">
        <p><%= pluralize(@contact.errors.count, "error") %> prohibited trip information from being processed:</p>
        <ul>
          <% @contact.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <%= f.label :last_name, "Nom" %>
      <%= f.text_field :last_name %>
    </div>
    <div class="field">
      <%= f.label :first_name, "Prénom" %>
      <%= f.text_field :first_name %>
    </div>
    <div class="field">
      <%= f.label :company, "Societé" %>
      <%= f.text_field :company %>
    </div>
    <div class="field">
      <%= f.label :email, "Email*" %>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :phone, "Tel" %>
      <%= f.text_field :phone %>
    </div>
    <div class="field">
      <%= f.label :category, "Catégorie" %>
      <%= f.select :category, Contact::CATEGORIES %>
    </div>
    <div class="field">
      <%= f.label :description, "Description*" %>
      <%= f.text_area :description, size: "50x10" %>
    </div>
    <div class="field">
      <%= f.label :accept_private_data_policy, "En cochant cette case, j'accepte la politique de confientialité du site*" %>
      <%= link_to "Politique de confidentialité", politique_confidentialite_index_path %>
      <%= f.check_box :accept_private_data_policy %>
    </div>
    <div class="actions">
      <%= f.submit "Soumettre", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
